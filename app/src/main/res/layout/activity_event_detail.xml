                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_label10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/title_label10"
                app:layout_constraintTop_toTopOf="@+id/title_label10" />

            <TextView
                android:id="@+id/attendees"
