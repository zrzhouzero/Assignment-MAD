                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_label2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/title_label2"
                app:layout_constraintTop_toTopOf="@+id/title_label2" />

            <TextView
                android:id="@+id/start_date_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:fontFamily="sans-serif-thin"
                android:inputType="date"
                android:text="Name"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_label3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/title_label3"
                app:layout_constraintTop_toTopOf="@+id/title_label3" />

            <TextView
                android:id="@+id/start_time_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:fontFamily="sans-serif-thin"
                android:inputType="time"
                android:text="Name"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_label4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/title_label4"
                app:layout_constraintTop_toTopOf="@+id/title_label4" />

            <TextView
                android:id="@+id/end_date_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:fontFamily="sans-serif-thin"
                android:inputType="date"
                android:text="Name"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_label5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title_label5" />

            <Button
                android:id="@+id/save_event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/save_event"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/add_attendee_button_on_detail_page"
                app:layout_constraintStart_toStartOf="@+id/add_attendee_button_on_detail_page"
                app:layout_constraintTop_toBottomOf="@+id/add_attendee_button_on_detail_page" />

            <Button
                android:id="@+id/remove_attendee_button_on_detail_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:text="Remove Attendees"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/attendees" />

            <Button
                android:id="@+id/add_attendee_button_on_detail_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-thin"
                android:text="Add Attendees"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/remove_attendee_button_on_detail_page"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/remove_attendee_button_on_detail_page"
                app:layout_constraintVertical_bias="0.0" />

